<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CylinderFormulas.CylinderArea">

    <TextView
        android:id="@+id/txtCylinderAreaCalculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Cylinder Area Calculator"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtCylinderAreaRadius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="44dp"
        android:text="Radius"
        app:layout_constraintStart_toStartOf="@+id/inputCylinderAreaRadius"
        app:layout_constraintTop_toBottomOf="@+id/txtCylinderAreaCalculator" />

    <EditText
        android:id="@+id/inputCylinderAreaRadius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:text="0.0"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/txtCylinderAreaCalculator"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/txtCylinderAreaCalculator"
        app:layout_constraintTop_toBottomOf="@+id/txtCylinderAreaCalculator"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/txtCylinderAreaHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="16dp"
        android:text="Height"
        app:layout_constraintStart_toStartOf="@+id/inputCylinderAreaHeight"
        app:layout_constraintTop_toBottomOf="@+id/inputCylinderAreaRadius" />

    <EditText
        android:id="@+id/inputCylinderAreaHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/inputCylinderAreaRadius"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/inputCylinderAreaRadius"
        app:layout_constraintTop_toBottomOf="@+id/inputCylinderAreaRadius"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/txtCylinderAreaAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Cylinder Area:"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/inputCylinderAreaHeight"
        app:layout_constraintStart_toStartOf="@+id/inputCylinderAreaHeight"
        app:layout_constraintTop_toBottomOf="@+id/inputCylinderAreaHeight" />

    <Button
        android:id="@+id/btnCylinderAreaCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Calculate"
        app:layout_constraintEnd_toEndOf="@+id/txtCylinderAreaAnswer"
        app:layout_constraintStart_toStartOf="@+id/txtCylinderAreaAnswer"
        app:layout_constraintTop_toBottomOf="@+id/txtCylinderAreaAnswer" />

    <Button
        android:id="@+id/btnCylinderAreaBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="@+id/btnCylinderAreaCalculate"
        app:layout_constraintStart_toStartOf="@+id/btnCylinderAreaCalculate"
        app:layout_constraintTop_toBottomOf="@+id/btnCylinderAreaCalculate" />

</androidx.constraintlayout.widget.ConstraintLayout>